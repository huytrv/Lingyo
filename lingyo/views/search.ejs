<% extend('layout') %>
<div class="category-frame">
    <div class="category">
        <div class="d-flex group-title"><span class="font-size-lg-2 none-deco none-mg">Kết quả tìm kiếm cho "<%- text -%>"</div>
    </div> 
</div>
<div class="main-frame-post d-flex">
    <div class="response-frame">
        <div class="search-content">
            <% for (let i = 0; i < result.length; i++){ %>
                <% if (result[i][0] == "ms") { %>
                    <div class="search-item border-b nav-red" nav-data="view-post" data-post-df="<%- result[i][1].postId %>">
                        <div class="d-flex-start">
                            <span>Video tham dự MS <span class="theme-color"><%- result[i][1].ms %></span> tại thể loại <span class="theme-color"><%- result[i][1].category %></span> cấp <span class="theme-color"><%- result[i][1].rank %></span></span>
                        </div>
                    </div>
                <% } %>
                <% if (result[i][0] != "ms") { %>
                <div class="search-item border-b nav-red" nav-data='personal' data-user-df="<%- result[i][2] -%>" data-user-id="<%- result[i][0] -%>">
                    <div class="d-flex-sb">
                        <div class="d-flex">
                            <% if (result[i][3].includes("http")) { %>
                                <a class="avt"><img src="<%- result[i][3] -%>" class="user-avt" username="<%- result[i][1] -%>">
                                <img src="https://cdn.lingyo.vn/lingyo-media/<%- result[i][6] -%>.png" class="avt-rank <%- result[i][6] -%>">
                                </a>
                                <% } %>
                            <% if (!result[i][3].includes("http")) { %>
                                <a class="avt"><img src="https://cdn.lingyo.vn/lingyo-media/<%- result[i][3] -%>" class="user-avt" username="<%- result[i][1] -%>">
                                <img src="https://cdn.lingyo.vn/lingyo-media/<%- result[i][6] -%>.png" class="avt-rank <%- result[i][6] -%>">
                                </a>
                                <% } %>
                            <div class="d-flex-col-start">
                                <a class="avt"><span class="avt-username user-username"><%- result[i][1] -%></span></a>
                                <a class="avt"><span class="post-time nickname-content">@<%- result[i][2] -%></span></a>
                            </div>
                        </div>
                        <div>
                            <% if (result[i][5]) { %>
                            <button class="follow-but following-but" data-following="<%- result[i][5] -%>">
                                <span class="follow-text">Đang theo dõi</span>
                            </button>
                            <% } %>
                            <% if (!result[i][5]) { %>
                            <button class="follow-but" data-following="<%- result[i][5] -%>">
                                <span class="follow-text">Theo dõi</span>
                            </button>
                            <% } %>
                        </div>
                    </div>
                    <div><%- result[i][4] -%></div>
                </div>
                <% } %>
            <% } %>
        </div>
        <div class="seemore-frame pd-l-lg pd-r-lg pd-t pd-b"><span class="seemore-result">Hiển thị thêm</span></div>
    </div>
</div>