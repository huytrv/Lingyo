<!DOCTYPE html>
<html>
<head>
    <%- include('header') -%>
</head>
<body>
    <div class="global-lg font-size-lg-1">
        <div class="main main-login d-flex">
            <div class="bg-container">
                <div class="bg-image"></div>
            </div>
            <div class="content">
                <div class="login-model">
                    <div class="logo d-flex mg-b">
                        <a href="/"><img src="/public/images/logo/logo1.png" class="cf-img"></a>
                    </div>
                    <div class="login-title">
                        <h2 class="large-title">Lingyo - Thi đấu, xếp hạng vũ công trực tuyến</h2>
                    </div>
                    <div class="login-area">
                        <div class="login-with-account">           
                            <form method="post" action="/login" class="login-form d-flex-col-start" novalidate>
                                <span class="error"><%- message -%></span>
                                <label  class="username-label">Email hoặc số điện thoại</label>
                                <input type="text" name="username" autofocus="on" value="<%- username -%>">
                                <label class="password-label">Mật khẩu</label>
                                <input type="password" name="password">
                                <a href="/forgot-password" class="forgot-link">Quên mật khẩu?</a>
                                <button type="submit" name="submit" value="Login" class="login submit-but" disabled>Đăng nhập</button>
                                <div class="signup-choice">
                                    <a class="signupBut">Đăng kí tài khoản?</a>
                                </div>
                            </form>   
                        </div>  
                        <div class="signup-choice choice-fb-gg">
                            <span>hoặc đăng nhập bằng:</span>
                        </div>
                        <div class="login-with-gg-fb">
                            <a href="/auth/facebook" class="connect-but cn-fb-but">
                                <img src="/public/images/facebook.png" class="cf-img">
                                <span class="large-span">Kết nối với Facebook</span>
                                <span class="small-span">Facebook</span>
                            </a>
                            <a href="/auth/google" class="connect-but cn-gg-but">
                                <img src="/public/images/google.png" class="cf-img">
                                <span class="large-span">Kết nối với Google</span>
                                <span class="small-span">Google</span>
                            </a>
                            <a href="/auth/facebook"><div class="fb-login-button" data-width="" data-size="large" data-button-type="continue_with" data-layout="default" data-auto-logout-link="false" data-use-continue-as="false"></div></a>
                        </div>
                    </div>   
                    <div class="contact">
                        <a href="/privacy-policy" class="none-deco">Chính sách và điều khoản</a>
                        <a href="/privacy-policy" class="none-deco">Hỗ trợ</a>
                        <span>© Lingyo Inc. 2020</span>
                    </div>
                </div>
                <div class="signup-container"></div>
            </div>
        </div>
    </div>
    <script src="/public/js/login.js" async></script>
    <div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v12.0&appId=2671130773138286&autoLogAppEvents=1" nonce="mM8Qwmb9"></script>
    <script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '{your-app-id}',
      cookie     : true,
      xfbml      : true,
      version    : '{api-version}'
    });
      
    FB.AppEvents.logPageView();   
      
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
</body>
</html>